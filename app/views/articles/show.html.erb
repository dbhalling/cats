<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v4.0"></script>
<div class="article">
  <div class="article__top">
    <h2><%= @article.title %></h2>
  </div>
  <div class="article__article">
    <%= @article.article_body %>
  </div>
  <div class="article__comment">
    <center><h5>Share</h5></center>
    <ul class="share-buttons">
      <li class="fb-share-button" data-href="http://www.felinesfancy.com/" data-layout="button" data-size="small"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fwww.felinesfancy.com%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Share</a></li>
      <li><a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script></li>
    </ul>
    <center><h5>Tell Us Your Thoughts!</h5></center>

    <%= render 'article_comments/form' %>

    <% if @article_comments %>
      <div class="article__comments">
        <% @article_comments.each do |comment| %>
          <div class="comment">
            <%= comment.body %>
          </div>
        <% end %>

        <%= will_paginate @article_comments, class: "digg_pagination" %>
      </div>
    <% end %>
  </div>
  <div class="scroll_buttons" data-controller="article-scroll">
    <div class="scroll_bottom">
      <button class="btn" type="button" name="scroll_bottom" data-action="click->article-scroll#scrollBottom">
        Scroll Bottom &#9660;
      </button>
    </div>
    <div class="scroll_top">
      <button class="btn" type="button" name="scroll_top" data-action="click->article-scroll#scrollTop">
        Scroll Top &#9650;
      </button>
    </div>
  </div>
</div>
